{
  "name": "test-cafe",
  "version": "1.0.0",
  "description": "Automation with Testcafe",
  "main": "index.js",
  "scripts": {
    "test": "testcafe chrome ./tests -s takeOnFails=true skipJsErrors=true --disable-page-caching",
    "test:chrome:headless": "testcafe chrome:headless ./tests -s takeOnFails=true skipJsErrors=true --disable-page-caching",
    "test:chrome:3": "testcafe -c 3 chrome ./tests -s takeOnFails=true skipJsErrors=true --disable-page-caching",
    "test:chrome:headless:3": "testcafe -c 3 chrome:headless ./tests -s takeOnFails=true skipJsErrors=true --disable-page-caching",
    "test:multiple": "testcafe chrome,safari ./tests -s takeOnFails=true skipJsErrors=true --disable-page-caching"    
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nabilsiregar7/test-cafe.git"
  },
  "keywords": [
    "TestCafe",
    "Testing",
    "Automation"
  ],
  "author": "Nabil Iswar Siregar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nabilsiregar7/test-cafe/issues"
  },
  "homepage": "https://github.com/nabilsiregar7/test-cafe#readme",
  "dependencies": {
    "testcafe": "^1.18.3"
  }
}
